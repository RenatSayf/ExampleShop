<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/user_photo"
        android:layout_marginTop="19dp"
        android:padding="2dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/color_C0C0C0"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_change_photo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        android:text="Change photo"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/color_808080"
        android:textSize="8sp"
        android:background="@drawable/bg_ripple_circle_transparent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"
        android:text="Satria Adhi Pradana"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/color_3F3F3F"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>