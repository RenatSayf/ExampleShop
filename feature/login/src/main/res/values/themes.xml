<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExampleShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/color_sign_in_btn</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeadTextView">
        <item name="android:textColor">@color/color_head_screen</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignInEditText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_user_data_edit_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_color_sign_in_et</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textCursorDrawable">@color/text_color_sign_in_et</item>
    </style>

    <style name="SignInButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_ripple_sign_in_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="GoogleSignInButton" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>